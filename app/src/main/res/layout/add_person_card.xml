<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/card_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/person1"
                android:textSize="28sp"
                android:text="+ Person"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:id="@+id/person_info"
                android:textSize="16sp"
                android:text="add person base informations"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/person_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/person_name"
                    android:textColorHint="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="姓名"/>
            </android.support.design.widget.TextInputLayout>
            <RadioGroup
                android:layout_marginTop="4dp"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="男"
                    android:id="@+id/boy"
                    android:checked="true"
                    android:textColor="@color/card_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="女"
                    android:id="@+id/gril"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/card_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/person_address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/person_address"
                    android:textColorHint="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="住址"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/person_tell_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/person_tell"
                    android:textColorHint="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="联系方式"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/person_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/person_email"
                    android:textColorHint="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="邮箱"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/person_describ_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/person_describ"
                    android:textColorHint="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="描述"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>