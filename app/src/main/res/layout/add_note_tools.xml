<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="right"
    android:elevation="10dp"
    android:paddingRight="12dp"
    android:background="@color/card_auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:padding="4dp"
        android:id="@+id/add_pic"
        android:src="@mipmap/add_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="4dp"
        android:id="@+id/add_voice"
        android:src="@mipmap/add_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="4dp"
        android:id="@+id/add_share"
        android:src="@mipmap/add_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="4dp"
        android:id="@+id/add_del"
        android:src="@mipmap/add_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>