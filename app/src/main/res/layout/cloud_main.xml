<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#70D2A8"
        android:divider="@mipmap/ic_img_line_v"
        android:showDividers="middle"
        android:dividerPadding="4dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cloud_save"
            android:text="日记备份"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/cloud_load"
            android:text="load 云日记"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/auto_img"
            android:src="@mipmap/cloud_img"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
        <ProgressBar
            android:id="@+id/pross"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:text="EasyWork Cloud"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#50000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>