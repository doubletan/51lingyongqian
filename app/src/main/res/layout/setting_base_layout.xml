<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        android:foreground="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/person_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/pass"
                        android:inputType="textPassword"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="访问密码"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/person_tell_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/again"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="确认访问密码"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tips"
                    android:paddingLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一定要记住密码哦"/>

                <Button
                    android:id="@+id/save"
                    android:text="保存密码"
                    android:textColor="#60000000"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/login_out_btn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        android:foreground="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/old_pass"
                        android:inputType="textPassword"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="原始密码"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/again_old"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="确认原始密码"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:layout_gravity="right"
                    android:textColor="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取消访问密码后，任何人都可访问"/>

                <Button
                    android:id="@+id/cancel_pass"
                    android:text="取消访问密码"
                    android:textColor="#60000000"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/login_out_btn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>