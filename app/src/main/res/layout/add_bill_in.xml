<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/card_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/moneyadd"
                android:textSize="28sp"
                android:text="+ money"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:id="@+id/add_money"
                android:textSize="16sp"
                android:text="add money base informations"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:background="@drawable/repeat_bg"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_money_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/add_num"
                    android:textColorHint="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="入账数目/￥"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/money_from_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/money_from"
                    android:textColorHint="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="来源"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/in_describ_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintAnimationEnabled="true">
                <EditText
                    android:id="@+id/in_describ"
                    android:textColorHint="@color/card_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="描述"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>