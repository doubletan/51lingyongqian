<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardElevation="4dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:foreground="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/person_head_img"
                        android:src="@mipmap/item_person"
                        android:layout_marginTop="4dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/person_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="姓名"
                        android:textColorHint="@color/card_auto"
                        app:hintAnimationEnabled="true">
                        <EditText
                            android:id="@+id/name"
                            android:textColorHint="@color/card_auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:weightSum="1"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/person_tell_input"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:layout_width="0dp"
                            android:textColorHint="@color/card_auto"
                            app:hintAnimationEnabled="true">
                            <EditText
                                android:id="@+id/tell"
                                android:textColorHint="@color/card_auto"
                                android:layout_marginRight="4dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:hint="联系方式"/>
                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:id="@+id/call_item"
                            android:src="@mipmap/tell"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/others"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_marginTop="4dp"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="男"
                        android:id="@+id/boy"
                        android:textColor="@color/card_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="女"
                        android:id="@+id/gril"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/card_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/address_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/card_auto"
                    android:layout_marginTop="2dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/address"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="住址"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/person_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/card_auto"
                    android:layout_marginTop="2dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/email"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="email"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/person_describ_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/card_auto"
                    android:layout_marginTop="2dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/describ"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="描述"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/more_function"
                    android:padding="4dp"
                    android:weightSum="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/show_all"
                            android:text="显示更多"
                            android:gravity="center_vertical"
                            android:textColor="@color/card_auto"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/save"
                            android:text="保存修改"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="@color/card_auto"
                            android:layout_weight="0.7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_weight="0.2"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/share"
                            android:src="@mipmap/share"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="8dp"
                            android:layout_alignParentTop="true" />
                        <ImageView
                            android:id="@+id/del"
                            android:src="@mipmap/del"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>