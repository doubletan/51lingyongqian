<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        android:foreground="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/person_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/person_name"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="昵称"/>
                </android.support.design.widget.TextInputLayout>
                <RadioGroup
                    android:layout_marginTop="4dp"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="男"
                        android:id="@+id/boy"
                        android:checked="true"
                        android:textColor="@color/card_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="女"
                        android:id="@+id/gril"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/card_auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/person_tell_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/person_tell"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:hint="联系方式"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/person_email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/person_email"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="邮箱"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/person_describ_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:hintAnimationEnabled="true">
                    <EditText
                        android:id="@+id/person_describ"
                        android:textColorHint="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="签名"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/save"
                    android:text="保存编辑"
                    android:textColor="#60000000"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/login_out_btn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>