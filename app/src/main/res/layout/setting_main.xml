<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <RelativeLayout
        android:id="@+id/setting_top"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:layout_weight="0.02">
        <LinearLayout
            android:id="@+id/selfInfo"
            android:gravity="center"
            android:paddingBottom="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <com.example.apple.lingyongqian.utils.RoundImageView
                android:id="@+id/headImg"
                android:src="@mipmap/ic_img_user_default"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/title" />
            <com.example.apple.lingyongqian.utils.AutofitTextView
                android:id="@+id/title"
                android:text="EasyWork"
                android:textSize="26sp"
                android:textColor="#fff"
                android:layout_width="90dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/my_say"
            android:background="#30000000"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/my_says"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:maxLines="3"
                android:gravity="center"
                android:textColor="#fff"
                android:text="我的生活，我自己来安排"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/setting_top"
        android:id="@+id/frameLayout">
        <ImageView
            android:id="@+id/set_top_img"
            android:src="@mipmap/materials"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/my_info"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:text="个人信息"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/myinfo_more"
                    android:src="@mipmap/more"
                    android:layout_marginRight="16dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <View
                android:background="#cccccc"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
