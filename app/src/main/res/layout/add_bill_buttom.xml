<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:paddingTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <LinearLayout
        android:elevation="4dp"
        android:background="@drawable/add_item_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="4dp"
        android:showDividers="middle"
        android:divider="@mipmap/ic_img_line_v"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/add_bill"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/add_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/minus_bill"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/plus_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/save_bill_card"
        android:layout_marginBottom="4dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:background="@drawable/add_item_bg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/save"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</LinearLayout>