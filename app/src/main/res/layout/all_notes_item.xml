<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/bg"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="4dp"
        android:layout_alignBottom="@+id/card_item"
        android:layout_alignParentTop="true">
        <ImageView
            android:background="@drawable/notes_item_bg"
            android:id="@+id/share_item"
            android:layout_gravity="center"
            android:src="@mipmap/add_share"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/notes_item_bg2"
            android:layout_marginRight="8dp"
            android:id="@+id/del_item"
            android:layout_gravity="center"
            android:src="@mipmap/add_del"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        app:cardElevation="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:id="@+id/num_bg"
                android:gravity="center"
                android:background="@color/card_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_num"
                    android:text="2016"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/quick_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_content"
                android:text="2016201620162016"
                android:layout_margin="4dp"
                android:maxLines="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_date"
                android:text="2016-7-1"
                android:layout_margin="4dp"
                android:maxLines="1"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>