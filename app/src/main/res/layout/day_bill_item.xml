<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardElevation="4dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:foreground="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/left"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:background="@color/card_auto"
                android:weightSum="1"
                android:layout_height="match_parent">
                <com.example.apple.lingyongqian.utils.AutofitTextView
                    android:id="@+id/inNum"
                    android:gravity="right|center_vertical"
                    android:text="24"
                    android:layout_gravity="right"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="36sp"
                    android:singleLine="true"
                    autofit:minTextSize="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="￥"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/main"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:weightSum="1"
                android:padding="8dp"
                android:gravity="center"
                android:showDividers="middle"
                android:divider="@mipmap/ic_img_line_v"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingRight="8dp"
                    android:layout_height="wrap_content">
                    <com.example.apple.lingyongqian.utils.AutofitTextView
                        android:id="@+id/fromOrTo"
                        android:text="来源/出处"
                        android:maxLines="3"
                        android:textColor="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/describ"
                        android:text="其它描述"
                        android:maxLines="4"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/card_auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/edit"
                        android:src="@mipmap/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/del"
                        android:src="@mipmap/del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>