<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="1"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/date_dot"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/green_dot"/>
        <TextView
            android:id="@+id/date_line"
            android:layout_gravity="center"
            android:background="@color/green_color"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingBottom="16dp"
        android:paddingLeft="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/diary_date"
            android:text="2016-07-10"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="26dp" />
        <android.support.v7.widget.CardView
            android:orientation="vertical"
            app:cardElevation="4dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="4dp"
            android:foreground="?android:selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/content"
                    android:text="日记内容"
                    android:maxLines="12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!--<TextView-->
                            <!--android:id="@+id/read_more"-->
                            <!--android:text="more"-->
                            <!--android:gravity="bottom"-->
                            <!--android:textColor="@color/card_auto"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="match_parent" />-->
                        <ImageView
                            android:id="@+id/share"
                            android:src="@mipmap/share"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginRight="4dp"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/del" />
                        <ImageView
                            android:id="@+id/del"
                            android:src="@mipmap/del"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>